var pseudos = msg.payload;

var text = '';
if (pseudos.length === 0) {
    text = 'nobody\'s home';
} else {
    for(i=0; i<pseudos.length; i++) {
        if (text !== '') {
            if (i === pseudos.length-1) {
                text += ' and ';
            } else {
                text += ', ';
            }
        }
        text += pseudos[i];
    }
    text = ' ' + 
        (pseudos.length === 1?'is': 'are') +
        ' home';
}

msg.payload = text;

return msg;
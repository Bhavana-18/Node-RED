if (flow.get('timerOn') === false) {
    return null;
}

var anyOn = msg.payload.on === true ||
    msg.payload.anyOn === true;
flow.set('anyOn', anyOn);
if (anyOn) {
    return null;
}

flow.set('timerOn', false);

node.log('[Corridor] timer stopped')

return [ { reset: true}, { payload: 'stop' } ];
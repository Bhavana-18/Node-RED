const BRIGHTNESS_PAYLOAD = { payload: {
    incrementBrightness: msg.payload,
    transitionTime: 1
}};

var lights = flow.get('lights') || {};
var outputMsgs = [null, null, null];

if (lights.bed === true) {
    outputMsgs[0] = BRIGHTNESS_PAYLOAD;
}
if (lights.desk === true) {
    outputMsgs[1] = BRIGHTNESS_PAYLOAD;
}
if (lights.ceiling === true) {
    outputMsgs[2] = BRIGHTNESS_PAYLOAD;
}

return outputMsgs;
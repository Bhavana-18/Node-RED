const BRIGHTNESS_PAYLOAD = { payload: {
    incrementBrightness: msg.payload,
    transitionTime: 1.2
}};

var lightsOn = flow.get('lightsOn') || {};
var msgs = [null, null, null];

if (lightsOn['Bed'] === true) {
    msgs[0] = BRIGHTNESS_PAYLOAD;
}
if (lightsOn['Desk'] === true) {
    msgs[1] = BRIGHTNESS_PAYLOAD;
}
if (lightsOn['Ceiling'] === true) {
    msgs[2] = BRIGHTNESS_PAYLOAD;
}

return msgs;
const SMOOTH_NB_VAL = 10;

var smooth = function(name, value, nbVal, dec) {
    var values = flow.get(name) || [];
    values.push(value);
    
    var total = 0;
    for(var i=0, n=values.length; i<n; i++) {
        if (i < nbVal) {
            total += values[i];
        } else {
            values.shift();
        }
    }
    flow.set(name, values);
    
    var avg = total / values.length;
    avg *= Math.pow(10, dec);
    avg = Math.round(avg);
    avg /= Math.pow(10, dec);
    
    return avg;
}

var payload = msg.payload;

payload.temperature = smooth(
    'temps',
    payload.temperature,
    SMOOTH_NB_VAL,
    2);
    
payload.humidity = smooth(
    'hum',
    payload.humidity,
    SMOOTH_NB_VAL,
    4);
    
payload.pressure = smooth(
    'pres',
    payload.pressure,
    SMOOTH_NB_VAL,
    2);

return msg;
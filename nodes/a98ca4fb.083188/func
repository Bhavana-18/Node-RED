const DELAY = 2000;// milliseconds

if (flow.get('enabled') === false) {
    return [ null, null ];
}

var onMsg = null;
var timerMsg = null;
if (flow.get('anyOn') === false) {
    // turn on
    onMsg = msg;
    // start timer after delay
    timerMsg = { delay: DELAY };
    node.log('[Corridor] delay timer (' +
        DELAY/1000 + 's)');
} else {
    // reset timer imediatly
    timerMsg = { delay: 0 };
}

return [ onMsg, timerMsg ];

const DELAY = 2; //seconds

if (flow.get('enabled') === false) {
    return [ null, null ];
}

var onMsg = null;
var timerMsg = null;
if (flow.get('anyOn') === false) {
    // turn on
    onMsg = msg;
    // start timer after delay
    timerMsg = { delay: DELAY * 1000};
    node.log('[Stairs] delay timer (' + DELAY + 's)');
} else {
    // reset timer
    timerMsg = { delay: 0 };
}

return [ onMsg, timerMsg ];
